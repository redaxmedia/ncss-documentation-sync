{
	"name": "redaxmedia/ncss-documentation-sync",
	"description": "Yet another cronjob for NCSS's website",
	"version": "4.0.0",
	"homepage": "https://redaxscript.com",
	"license": "GPL-3.0",
	"repositories":
	[
		{
			"type": "git",
			"url": "https://github.com/redaxmedia/ncss-documentation.git"
		}
	],
	"require":
	{
		"php": "^7.2"
	},
	"require-dev":
	{
		"cebe/markdown": "1.2.1",
		"redaxmedia/ncss-documentation": "dev-master",
		"redaxmedia/php-coding-standard": "1.2.1",
		"redaxscript/redaxscript": "dev-master",
		"squizlabs/php_codesniffer": "3.3.2",
		"symfony/finder": "4.1.7"
	},
	"scripts":
	{
		"post-install-cmd":
		[
			"cd vendor/redaxscript/redaxscript && composer install"
		],
		"post-update-cmd":
		[
			"@post-install-cmd"
		],
		"lint":
		[
			"vendor/bin/phpcs includes"
		],
		"fix":
		[
			"vendor/bin/phpcbf includes"
		]
	}
}
